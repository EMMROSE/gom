<div id="<%= "navbar-homepage" if params[:action] == "home" %>" class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top border-bottom">
  <div class="navbar-content">
    <div class="navbar-brand">
      <%= link_to root_path do %>
        <%= image_tag("GOMLogo.png")%>
      <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="search flex-grow-1">
      <%= form_tag sport_sessions_path, method: :get, novalidate: "novalidate", class: "simple_form search"  do %>
        <div class="search-form-control form-group mb-0">
          <%= text_field_tag :query,
              params[:query],
              class: "search-input form-control string required",
              class: "search_query",
              style: "text-align: left",
              placeholder: "Find your next session",
              value: params[:query]
          %>

          <%= button_tag(type: "submit", class: "btn btn-gom") do %>
            <i class="fas fa-search"></i> Search
          <% end %>
        </div>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
             <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Create Session", '#', class: "dropdown-item" %>
              <%= link_to "Dashboard", dashboards_path, class: "dropdown-item" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="navbar-login">
        <%= link_to "login", new_user_session_path, class: "btn btn-black" %>
        <%= link_to "sign-up", new_user_registration_path, class: "btn btn-black" %>
      </div>
    <% end %>
  </div>
  <% if params[:query] %>
    <%= render 'shared/search_filters' %>
  <% end %>
</div>


<% if params[:query] %>
  <div style="height:134px;"></div>
<% elsif params[:action] != "home" %>
  <div style="height:87px;"></div>
<% end %>
