<div class="container mt-5">
  <%= simple_form_for(@sport_session) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :capacity, collection: SportSession::CAPACITY %>
    <%= f.input :level, collection: SportSession::LEVEL %>
    <%= f.input :activity_id, as: :select, collection: @activities, prompt: 'Select Activity', label: false %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.submit %>
  <% end %>
</div>
