<!DOCTYPE html>
<html>
  <head>
    <title>Gom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <link href="https://fonts.googleapis.com/css?family=Poppins:700|Roboto:300,400,700&display=swap" rel="stylesheet">
    <%= favicon_link_tag 'favicon.ico'%>
  </head>

  <body style="<%= "margin-bottom: 0px;" if params[:action] == "dashboard" %>">
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <%= render 'shared/sport_session_creation_modal' %>

    <%= yield %>
  </body>
</html>
